@model PagedList.IPagedList<KStypemig.Models.Blog>
@using PagedList.Mvc
@{
    ViewBag.Title = "Dstintuc";
    Layout = "~/Views/Shared/_LayoutKhachhangvaAdmin.cshtml";
}

<h2>Dstintuc</h2>

<p>
    @Html.ActionLink("Create New", "Themtintuc")
</p>
<table class="table">
    <tr>
        <th>
            Tiêu đề
        </th>
        <th>
            Nội dung
        </th>
        <th>
            Ngày đăng
        </th>
        <th>
            Tác giả
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tieude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Noidung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaydang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tacgia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Suatintuc", new { matt = item.IdBaiviet }) |
                 @Html.ActionLink("Delete", "Xoatintuc", new { matt = item.IdBaiviet })
            </td>
        </tr>
    }

</table>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("dstintuc", new { page }))
</div>

