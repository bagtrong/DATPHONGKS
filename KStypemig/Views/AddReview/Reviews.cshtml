
@{
    ViewBag.Title = "Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reviews</h2>
@model IEnumerable<KStypemig.Models.Review  >

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Rating</th>
        <th>Comment</th>
        <th>Created Date</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Username</td>
            <td>@item.Email</td>
            <td>@item.Rate</td>
            <td>@item.Content</td>
            <td>@item.CreateDate</td>
        </tr>
    }
</table>

<h3>Add a Review</h3>

<form action="@Url.Action("AddReview","AddReview")" method="post" class="ra-form">
    <div class="row">
        <div class="col-lg-6">
            <input type="text" placeholder="Name*" name="Username" required />
        </div>
        <div class="col-lg-6">
            <input type="email" placeholder="Email*" name="Email" required />
        </div>
        <div class="col-lg-12">
            <div>
                <h5>Your Rating:</h5>
                <div class="rating" id="rating">
                    <select id="rating" name="Rate" required>
                        <option value="1">1 Star</option>
                        <option value="2">2 Stars</option>
                        <option value="3">3 Stars</option>
                        <option value="4">4 Stars</option>
                        <option value="5">5 Stars</option>
                    </select>
                </div>
            </div>
            <textarea placeholder="Your Review" name="Content" required></textarea>
            <button type="submit">Submit Now</button>
        </div>
    </div>
</form>
