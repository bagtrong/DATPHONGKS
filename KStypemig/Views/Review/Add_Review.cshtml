@using KStypemig.Models
@model Review
<div class="review-add">
    <h4>Add Review</h4>
    <form action="@Url.Action("Review","KhachHang")" method="post" class="ra-form">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-6">
                <input type="text" placeholder="Name*" value="@Model.Username">
            </div>
            <div class="col-lg-6">
                <input type="text" placeholder="Email*" value="@Model.Email">
            </div>
            <div class="col-lg-12">
                <div>
                    <h5>Your Rating:</h5>
                    <div class="rating">
                        <i class="icon_star" data-rating="1"></i>
                        <i class="icon_star" data-rating="2"></i>
                        <i class="icon_star" data-rating="3"></i>
                        <i class="icon_star" data-rating="4"></i>
                        <i class="icon_star" data-rating="5"></i>
                    </div>
                </div>
                <textarea placeholder="Your Review">@Model.Content</textarea>
                <button type="submit">Submit Now</button>
            </div>
        </div>
    </form>
</div>
